makeCacheMatrix <- function(x = matrix()) { 
     i <- NULL 
     set <- function(y) { 
         x <<- y 
         i <<- NULL 
     } 
     get <- function() x 
     setmean <- function(mean) i <<- mean 
     getmean <- function() i 
     list(set=set, get=get, setmean=setmean, getmean=getmean) 
 } 

 cacheSolve <- function(x, ...) { 
     i <- x$getmean() 
     if(!is.null(i)) { 
         message("getting cached data.") 
         return(i) 
     } 
     data <- x$get() 
     i <- solve(data) 
     x$setmean(i) 
     i 
 } 
## This is the code from the assignment instruction modified accordingly for Matrix
